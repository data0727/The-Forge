= form_for [@project, @epic, @story], html: {class: 'form-horizontal'} do |story_form|
  %fieldset
    %legend Story Details
    .control-group.name
      = story_form.label :name, 'Name', class: 'control-label'
      .controls.name
        = story_form.text_field :name
    .control-group.description
      = story_form.label :description, 'Description', class: 'control-label' 
      .controls.description
        = story_form.text_area :description
    .control-group.points
      = story_form.label :points, 'Points', class: 'control-label'
      .controls.points
        =story_form.select :points, options_for_select(%w(0 1 2 3 5 8 13 21))
    .control-group.price
      = story_form.label :estimate, 'Estimate', class: 'control-label'
      .controls.price
        = story_form.text_field :estimate
    .form-actions
      = story_form.submit 'Save', class: 'btn btn-primary'
