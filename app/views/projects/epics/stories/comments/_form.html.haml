= form_for [@project,@epic,@story,@comment], html: {class: 'form-horizontal'} do |comment_form|
  %fieldset
    %legend Comment Details
    = comment_form.hidden_field :user_nickname, value: "#{@current_user.nickname}"
    .control-group
      = comment_form.label :description, 'Description', class: 'control-label'
      .controls
        =comment_form.text_area :description
    .form-actions
      = comment_form.submit 'Save', class: 'btn btn-primary'
